{
    "name": "fastarduino",
    "displayName": "FastArduino",
    "description": "FastArduino for Visual Studio Code",
    "version": "0.6.0",
    "publisher": "jfpoilpret",
    "author": {
        "name": "Jean-Francois Poilpret"
    },
    "license": "SEE LICENSE IN LICENSE-2.0.txt",
    "engines": {
        "vscode": "^1.17.0"
    },
    "preview": false,
    "os": ["linux", "darwin"],
    "repository": {
        "type": "git",
        "url": "https://github.com/jfpoilpret/vscode-fastarduino"
    },
    "categories": [
        "Other"
    ],
    "keywords": [
        "fastarduino",
        "avr",
        "framework",
        "arduino"
    ],
    "extensionDependencies": [
        "ms-vscode.cpptools"
    ],
    "activationEvents": [
        "workspaceContains:.fastarduino"
    ],
    "main": "./out/src/fastarduino",
    "contributes": {
        "configuration": {
            "title": "FastArduino Configuration",
            "type": "object",
            "properties": {
                "fastarduino.general": {
                    "description": "General FastArduino settings.",
                    "type": "object",
                    "properties": {
                        "defaultTarget": {
                            "description": "Default target (selected from fastarduino.targets)",
                            "type": "string"
                        }
                    },
                    "required": ["defaultTarget"]
                },
                "fastarduino.targets": {
                    "description": "Named Targets (Board or MCU) to be made available.",
                    "type": "object",
                    "additionalProperties": {
                        "description": "Definition of a Target",
                        "type": "object",
                        "properties": {
                            "board": {
                                "description": "Target (Board or MCU) to list as available.",
                                "type": "string",
                                "enum": [
                                    "Arduino UNO",
                                    "Arduino NANO",
                                    "Arduino LEONARDO",
                                    "Arduino MEGA",
                                    "ATmega328",
                                    "ATtinyX4",
                                    "ATtinyX5"
                                ]
                            },
                            "frequency": {
                                "description": "Frequency of Target (MCU only).",
                                "type": "integer",
                                "minimum": 1,
                                "maximum": 20
                            },
                            "programmer": {
                                "description": "Programmer used to upload to Target (Board or MCU).",
                                "type": "string",
                                "enum": [
                                    "UNO USB",
                                    "NANO USB",
                                    "LEONARDO USB",
                                    "MEGA USB",
                                    "ArduinoISP.cc",
                                    "ISP Shield"
                                ]
                            },
                            "serial": {
                                "description": "Default Serial Device to use for this Programmer.",
                                "type": "string",
                                "pattern": "^/dev/(tty|cu\\.)[A-Za-z0-9]+$"
                            },
                            "fuses": {
                                "description": "",
                                "type": "object",
                                "properties": {
                                    "hfuse": {
                                        "type": "string",
                                        "pattern": "0x[0-9A-Fa-f][0-9A-Fa-f]"
                                    },
                                    "lfuse": {
                                        "type": "string",
                                        "pattern": "0x[0-9A-Fa-f][0-9A-Fa-f]"
                                    },
                                    "efuse": {
                                        "type": "string",
                                        "pattern": "0x[0-9A-Fa-f][0-9A-Fa-f]"
                                    }
                                },
                                "required": ["hfuse", "lfuse", "efuse"]
                            },
                            "defines": {
                                "description": "Optional additional defines to be passed to compiler",
                                "type": "array",
                                "uniqueItems": true,
                                "items": {
                                    "description": "Additional define in the form 'XXX=YYY' or 'XXX'",
                                    "type": "string",
                                    "pattern": "([A-Za-z_][0-9A-Za-z_]*)(=.+)?"
                                }
                            },
                            "compilerOptions": {
                                "description": "Optional compiler options",
                                "type": "string"
                            },
                            "linkerOptions": {
                                "description": "Optional linker options",
                                "type": "string"
                            }
                        },
                        "required": ["board", "programmer"]
                    }
                }
            }
        },
        "commands": [
            {
                "command": "fastarduino.setTarget",
                "title": "FastArduino: Set Target (Board, Programmer)"
            }
        ],
        "problemMatchers": [
            {
                "name": "avrgcc",
                "owner": "fastarduino",
                "fileLocation": ["absolute"],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.0.3",
        "vscode": "^1.0.0",
        "mocha": "^2.3.3",
        "@types/node": "^6.0.40",
        "@types/mocha": "^2.2.32"
    }
}
