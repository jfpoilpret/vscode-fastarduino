{
    "name": "fastarduino",
    "displayName": "FastArduino",
    "description": "FastArduino for Visual Studio Code",
    "version": "0.10.0",
    "publisher": "jfpoilpret",
    "author": {
        "name": "Jean-Francois Poilpret"
    },
    "license": "SEE LICENSE IN LICENSE-2.0.txt",
    "homepage": "https://github.com/jfpoilpret/vscode-fastarduino",
    "bugs": {
        "url": "https://github.com/jfpoilpret/vscode-fastarduino/issues"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/jfpoilpret/vscode-fastarduino"
    },
    "engines": {
        "vscode": "^1.50.0"
    },
    "preview": false,
    "os": [
        "linux",
        "darwin"
    ],
    "categories": [
        "Other"
    ],
    "keywords": [
        "fastarduino",
        "avr",
        "framework",
        "platform",
        "arduino"
    ],
    "extensionDependencies": [
        "ms-vscode.cpptools"
    ],
    "activationEvents": [
        "workspaceContains:.fastarduino"
    ],
    "main": "./out/src/fastarduino",
    "contributes": {
        "taskDefinitions": [
            {
                "type": "FastArduino"
            },
            {
                "type": "fastarduino",
                "required": [
                    "command"
                ],
                "properties": {
                    "command": {
                        "type": "string",
                        "enum": [
                            "build",
                            "clean",
                            "clean-all-targets",
                            "flash",
                            "eeprom",
                            "fuses"
                        ],
                        "description": "The FastArduino command to execute on current directory"
                    }
                }
            }
        ],
        "configuration": {
            "title": "FastArduino Configuration",
            "type": "object",
            "properties": {
                "fastarduino.general": {
                    "description": "General FastArduino settings.",
                    "type": "object",
                    "properties": {
                        "defaultTarget": {
                            "description": "Default target (selected from fastarduino.targets)",
                            "type": "string"
                        }
                    },
                    "required": [
                        "defaultTarget"
                    ]
                },
                "fastarduino.targets": {
                    "description": "Named Targets (Board or MCU) to be made available.",
                    "type": "object",
                    "additionalProperties": {
                        "description": "Definition of a Target",
                        "type": "object",
                        "properties": {
                            "board": {
                                "description": "Target (Board or MCU) to list as available.",
                                "type": "string",
                                "enum": [
                                    "Arduino UNO",
                                    "Arduino NANO",
                                    "Arduino LEONARDO",
                                    "Arduino MEGA",
                                    "ATmega328",
                                    "ATmega164",
                                    "ATmega324",
                                    "ATmega644",
                                    "ATmega1284",
                                    "ATtinyX4",
                                    "ATtinyX5"
                                ]
                            },
                            "frequency": {
                                "description": "Frequency of Target (MCU only).",
                                "type": "integer",
                                "minimum": 1,
                                "maximum": 20
                            },
                            "programmer": {
                                "description": "Programmer used to upload to Target (Board or MCU).",
                                "type": "string",
                                "enum": [
                                    "UNO USB",
                                    "NANO USB",
                                    "LEONARDO USB",
                                    "MEGA USB",
                                    "ArduinoISP.cc",
                                    "ArduinoISP.org",
                                    "USBtinyISP",
                                    "ISP Shield"
                                ]
                            },
                            "serial": {
                                "description": "Default Serial Device to use for this Programmer.",
                                "type": "string",
                                "pattern": "^/dev/(tty|cu\\.)[A-Za-z0-9]+$"
                            },
                            "fuses": {
                                "description": "",
                                "type": "object",
                                "properties": {
                                    "hfuse": {
                                        "type": "string",
                                        "pattern": "0x[0-9A-Fa-f][0-9A-Fa-f]"
                                    },
                                    "lfuse": {
                                        "type": "string",
                                        "pattern": "0x[0-9A-Fa-f][0-9A-Fa-f]"
                                    },
                                    "efuse": {
                                        "type": "string",
                                        "pattern": "0x[0-9A-Fa-f][0-9A-Fa-f]"
                                    }
                                },
                                "required": [
                                    "hfuse",
                                    "lfuse",
                                    "efuse"
                                ]
                            },
                            "defines": {
                                "description": "Optional additional defines to be passed to compiler",
                                "type": "array",
                                "uniqueItems": true,
                                "items": {
                                    "description": "Additional define in the form 'XXX=YYY' or 'XXX'",
                                    "type": "string",
                                    "pattern": "([A-Za-z_][0-9A-Za-z_]*)(=.+)?"
                                }
                            },
                            "compilerOptions": {
                                "description": "Optional compiler options",
                                "type": "string"
                            },
                            "linkerOptions": {
                                "description": "Optional linker options",
                                "type": "string"
                            }
                        },
                        "required": [
                            "board",
                            "programmer"
                        ]
                    }
                }
            }
        },
        "commands": [
            {
                "command": "fastarduino.setTarget",
                "title": "FastArduino: Set Target (Board, Programmer)"
            }
        ],
        "problemMatchers": [
            {
                "name": "avrgcc",
                "owner": "fastarduino",
                "fileLocation": [
                    "absolute"
                ],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile",
        "test": "node ./out/src/test/runTest.js"
    },
    "devDependencies": {
        "@types/glob": "^7.1.1",
        "@types/mocha": "^5.2.7",
        "@types/node": "^12.11.7",
        "@types/vscode": "^1.41.0",
        "glob": "^7.1.5",
        "mocha": "^11.1.0",
        "tslint": "^5.20.0",
        "typescript": "^3.6.4",
        "vscode-test": "^1.2.2"
    }
}
