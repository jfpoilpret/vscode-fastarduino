{
    "name": "fastarduino",
    "displayName": "FastArduino",
    "description": "FastArduino for Visual Studio Code",
    "version": "0.0.1",
    "publisher": "jfpoilpret",
    "engines": {
        "vscode": "^1.15.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "workspaceContains:Makefile-FastArduino.mk"
    ],
    "main": "./out/src/extension",
    "contributes": {
        "commands": [
            {
                "command": "fastarduino.setBoard",
                "title": "FastArduino: set target board"
            },
            {
                "command": "fastarduino.setSerial",
                "title": "FastArduino: set board serial device"
            },
            {
                "command": "fastarduino.setProgrammer",
                "title": "FastArduino: set programmer to use for target"
            }
        ],
        "problemMatchers": [
            {
                "name": "avrgcc",
                "owner": "fastarduino",
                "fileLocation": ["relative", "${fileDirname}"],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.0.3",
        "vscode": "^1.0.0",
        "mocha": "^2.3.3",
        "@types/node": "^6.0.40",
        "@types/mocha": "^2.2.32"
    }
}